{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "outDir": "dist",
    "lib": ["es2015", "dom"],
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "typings/index.d.ts",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "debug": true
  }
}
